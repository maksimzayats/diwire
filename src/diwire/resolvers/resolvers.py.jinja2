def init(registrations) -> RootResolver:
    for slot, resolver in _resolvers_by_slot_mapping.items():
        registration = registrations.get_by_slot(slot)
        _resolvers_by_type_mapping[registration.dependency_type] = resolver

    return RootResolver()
